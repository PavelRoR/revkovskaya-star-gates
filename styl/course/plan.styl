#plan
	width 100%
	padding 60px 0
	background-color: #1086bd;
	background-image: url("../img/happens_bg.jpg");
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
.general_title_plan
	color #fff
#plan_tabs
	width 100%
	max-width 850px
	margin 0 auto 40px
.packets
	border-radius: 6px;
	background-color: rgba(255,255,255,0.9);
	box-shadow: 0px 6px 7.44px 0.56px rgba(3,91,132,0.29);
	padding 20px 30px
	min-height 470px
.plan_tabs_buttons
	text-align: center
	list-style none
	li
		display: inline-block
		margin 0 15px 25px
		position relative
		text-align: center;
		font-size: 22px;
		font-family: "IntroBoldAlt", sans-serif;
		line-height: 1.2;
		text-shadow: 0px 6px 8.46px rgba(0,0,0,0.26);
		transition: all .3s ease
		a
			display block
			color #fff
		&.ui-state-active
		&.ui-state-hover
			&:before
				content: '';
				display: block;
				border-radius: 50%;
				background-color: #ffe92e
				position: absolute;
				width: 10px;
				height: 10px;
				right 0
				left 0
				margin 0 auto
				bottom: -10px
			a
				color: #ffe92e;
				text-decoration: none
.packet_title
	text-align: center
	margin-bottom: 15px
	color #0281bc
	font-size: 22px
	font-family: "IntroBlack", sans-serif;
.lessons_buttons
	text-align: center
	li
		display: inline-block
		margin 0 10px 10px
		list-style none
		font-size: 18px
		font-family: 'UbuntuBold',sans-serif
		transition: all .3s ease
		position relative
		a
			display block
			color #143d50
		&.ui-state-active
		&.ui-state-hover
			&:before
				content: '';
				display: block;
				border-radius: 50%;
				background-color: #fe9900
				position: absolute;
				width: 6px;
				height: 6px;
				bottom:  -5px;
				left: 0
				right 0
				margin 0 auto
			a
				color #fe9900
				text-shadow: 0 2px 2px rgba(0,0,0,.15)
				text-decoration: none
.lesson_title
	font-size: 16px
	margin: 20px 0 10px
	font-family: 'UbuntuBold',sans-serif
	color #000
.lesson_list
	margin-left: 10px
	li
		font-size: 16px
		// font-family: 'UbuntuLight',sans-serif
		margin-bottom: 5px
		list-style none
		position relative
		padding-left: 10px
		&:before
			content ''
			position: absolute
			display block
			left 0
			top 10px
			border-radius: 50%
			width 6px
			height 6px
			background-color: #0281bc
			box-shadow: 0px 2px 7.6px 0.4px rgba(0,0,0,0.15);
		&:last-child
			margin-bottom: 0
.plan_aftertext
	text-align: center;
	width: 100%;
	max-width: 740px;
	margin: 15px auto 0
	font-size: 18px;
	font-family: "UbuntuBold", sans-serif;
	line-height: 1.3;
	color: #0281bc;