#footer
	width 100%
	padding 28px 0 24px
	background-color: rgb(9, 71, 114);
	box-shadow: 0px 3px 33.6px 1.4px rgba(0, 0, 0, 0.13);
	text-align: center
	h5
		font-size: 24px;
		color: rgb(255, 252, 252);
		line-height: 1.042;
		margin 0
		font-family: 'UbuntuBold', sans-serif;
	p
	#conditions
		font-size: 14px;
		font-family: "UbuntuLight",sans-serif;
		color: rgb(255, 255, 255);
		line-height: 1.2;
		text-align: center;
	#conditions
		text-decoration: underline
		&:hover
			text-decoration: none
.soc_buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 20px 7px
		position relative
		z-index: 1
		border-radius: 50px
		background-color: #ffe92e
		transition: all .3s ease
		i
			width: 32px;
			height: 32px;
			color rgb(9, 71, 114);
			font-size 18px
			line-height 32px
			border-radius: 50px
			position relative
			z-index 9
			transition: all .3s ease
		&:hover
			background-color: #fe9900
.mail_modal-content
	background-color: #01476b
	border 1px solid rgb(254, 153, 0);
button.close
	position absolute
	width: 35px
	height 35px
	border-radius: 50px
	line-height: 35px
	text-align: center
	font-size: 35px
	color: #000
	background-color: #F0F0F0
	top 10px
	right 10px
	left auto
	z-index 99
	opacity 1
	transition: all .1s ease-in-out
	font-family: 'Intro', sans-serif
	&:hover
		transform: rotate(90deg)
		color rgb(254, 153, 0);
.modal-body
	h3
		color #fff
		font-size: 22px
		margin 20px 0
		font-family: 'UbuntuBold',sans-serif
.modal_list
	margin-left: 10px
	li
		color #fff
		font-size: 18px
		margin-bottom: 10px
		list-style none
		span
			color #e88c00