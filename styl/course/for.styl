#for
	width 100%
	padding 60px 0
.for_list
	width 100%
	max-width 650px
	margin 0 auto 30px
	li
		list-style: none
		font-family: "UbuntuLight", sans-serif;
		color: #242424;
		line-height: 1.222;
		margin-bottom: 16px;
		letter-spacing: 0.4px;
		font-size: 18px
		position relative
		padding-left: 18px
		&:last-child
			margin-bottom: 0
		&:before
			content ''
			position: absolute
			display block
			left 0
			top 9px
			border-radius: 50%
			width 10px
			height 10px
			background-color: #0281bc
.for_aftertext
	text-align: center;
	width: 100%;
	max-width: 740px;
	margin: 0 auto;
	font-size: 20px;
	font-family: "UbuntuBold", sans-serif;
	line-height: 1.3;
	color: #0281bc;
	letter-spacing: 0.4px;