#footer
	width 100%
	padding 28px 0 24px
	background-color: rgb(9, 71, 114);
	box-shadow: 0px 3px 33.6px 1.4px rgba(0, 0, 0, 0.13);
	p
		font-size: 14px;
		font-family: "UbuntuLight",sans-serif;
		color: rgb(255, 255, 255);
		line-height: 1.2;
		text-align: center;
		width 100%
		max-width 300px
		margin 0 auto
.mail_modal-content
	background-color: #01476b
	border-radius: 5px
	text-align: center
.modal_form
	width 100%
	margin 0 auto
	float: none
.modal_mail_section_title
	width 100%
	float: none
	max-width 90%
	margin 20px auto
	color #fff
.modal_mail_subtitle
	color #fff
	width 100%
	max-width 90%
	margin 10px auto
.form_container_modal
	max-width 455px
	width 100%
	float: none
	margin 0 auto
.checking_modal
	max-width 455px
	margin-bottom: 15px
.mail_soc_buttons_modal
	float: none
button.close
	position absolute
	width: 35px
	height 35px
	border-radius: 50px
	line-height: 35px
	text-align: center
	font-size: 35px
	color: #000
	background-color: #F0F0F0
	top 10px
	right 10px
	left auto
	z-index 99
	opacity 1
	transition: all .1s ease-in-out
	font-family: 'Intro', sans-serif
	&:hover
		transform: rotate(90deg)
		color rgb(254, 153, 0);
.politics_modal-content
	.modal-title
		font-size: 24px
		text-align: left 
		width 100%
		max-width 90%
		small
			display: block
	p
		font-size: 16px
		margin-bottom: 15px
.modal-backdrop.in
	opacity .7
	background-color: rgba(255,255,255,1)