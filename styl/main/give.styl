#gives
	width 100%
	padding 90px 0
	background-color: rgb(9,75,135)
	background-image url(../img/gives_bg.jpg)
	background-repeat no-repeat
	background-position  center
	background-size: cover
	box-shadow: 0px 3px 26.68px 2.32px rgba(0, 66, 97, 0.3) inset
.gives_title
	border 2px solid rgb(255, 255, 255);
	border-radius: 5px;
	background-color: rgb(1, 71, 107);
	box-shadow: 0px 12px 15.66px 2.34px rgba(0, 0, 0, 0.35);
	margin 0 auto 56px
	width 100%
	max-width 630px
	text-align: center
	font-size: 30px;
	color: rgb(255, 233, 46);
	line-height: 72px
.gives_container
	border-radius: 5px;
	background-color: rgba(255, 255, 255, .8);
	width: 1150px;
	padding 35px 6px 37px
	margin 0 auto
.single_give_text
	font-family: "UbuntuLight",sans-serif;
	color: rgb(0, 0, 0);
	line-height: 1.2;
	min-height 80px
	margin-bottom: 23px
	background-repeat no-repeat
	background-position 0 center
	padding-left: 110px
	display: flex;
	justify-content: center;
	align-items: center;
	letter-spacing: 0.2px;
	&:last-child
		margin-bottom: 0
.single_give_text_1
	background-image url(../img/givin_icon_1.png)
.single_give_text_2
	background-image url(../img/givin_icon_2.png)
.single_give_text_3
	background-image url(../img/givin_icon_3.png)
.single_give_text_4
	background-image url(../img/givin_icon_4.png)
.single_give_text_5
	background-image url(../img/givin_icon_5.png)
.single_give_text_6
	background-image url(../img/givin_icon_6.png)
.single_give_text_7
	background-image url(../img/givin_icon_7.png)
.gives_aftertitle
	margin 23px auto 0
	font-size: 20px;
	font-family: "UbuntuBold",sans-serif;
	color: rgb(2, 129, 188);
	line-height: 1.3;
	text-align: center;
	width 100%
	max-width 746px
	letter-spacing: 0.4px;
.button_gives
	margin-top: 40px