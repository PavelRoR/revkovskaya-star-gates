#author
	width 100%
	padding 78px 0 90px
.author_title
	font-size: 30px;
	font-family: "Ubuntu";
	color: rgb(20, 61, 80);
	line-height: 1.2;
	text-align: center;
	margin-bottom: 20px
.author_img
	float left
	margin:0 80px 0 89px
	position relative
	width 100%
	max-width 262px
	background-color rgb(5,98,139)
	img
		position relative
		width 100%
		border 2px solid #a3dcf1
		box-shadow: 2px 2px 24px 5px  rgba(#040444, .16)
		z-index 9
	&:before
		content: ''
		display block
		position: absolute
		border 3px solid rgb(181, 226, 251);
		border-radius: 50%;
		opacity: 0.549;
		position: absolute;
		width: 268px;
		height: 268px;
		z-index: 4;
		top: 5px;
		left: -39px;
	&:after
		content: ''
		display block
		position: absolute
		border 3px solid rgb(181, 226, 251);
		border-radius: 50%;
		background-color: rgb(1, 71, 107);
		opacity: 0.851;
		position: absolute;
		width: 27px;
		height: 27px;
		top: 69px;
		left: -42px;
		z-index 5
.about_container
	float left
	width 100%
	max-width 706px
.about_title
	font-size: 20px;
	font-family: "UbuntuBold",sans-serif;
	color: rgb(2, 129, 188);
	line-height: 1.3;
	margin -3px 0 20px
	letter-spacing: 0.4px
.about_list
	li
		list-style: none
		padding-left:  29px
		background-image url(../img/romb_2.png)
		background-repeat no-repeat
		background-position 0 3px
		margin-bottom: 20px
		color: rgb(20, 61, 80);
		line-height: 1.2;
		min-height 23px
		letter-spacing: 0.2px;
		&:last-child
			margin-bottom: 0
.button_partners
	max-width 300px
	text-transform: none
	margin-top: 57px