-var today_2 = '11 900р.'
-var link_1 = 'https://aleksandrkudryashov1.autoweboffice.ru/?r=ordering/cart/as1&id=2587&clean=true&lg=ru'
-var link_2 = 'https://aleksandrkudryashov1.autoweboffice.ru/?r=ordering/cart/as1&id=2590&clean=true&lg=ru'
