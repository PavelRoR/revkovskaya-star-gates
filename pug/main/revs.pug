section#reveiws
	.container
		h3.revs_title Отзывы учеников
		#text_revs.carousel.slide(data-ride="carousel" data-interval="false")
			.carousel-inner(role="listbox")
				.item.active
					a(href="img/revs/rev_4.jpg" data-fancybox="revs")
						img(data-src="img/revs/rev_4.jpg", alt="Отзыв").lazy.rev_img
				.item
					a(href="img/revs/rev_1.jpg" data-fancybox="revs")
						img(data-src="img/revs/rev_1.jpg", alt="Отзыв").lazy.rev_img
				.item
					a(href="img/revs/rev_2.jpg" data-fancybox="revs")
						img(data-src="img/revs/rev_2.jpg", alt="Отзыв").lazy.rev_img
				.item
					a(href="img/revs/rev_3.jpg" data-fancybox="revs")
						img(data-src="img/revs/rev_3.jpg", alt="Отзыв").lazy.rev_img
				.item
					a(href="img/revs/rev_5.jpg" data-fancybox="revs")
						img(data-src="img/revs/rev_5.jpg", alt="Отзыв").lazy.rev_img
			ol.carousel-indicators
				li.active( data-target="#text_revs" data-slide-to="0")
				li( data-target="#text_revs" data-slide-to="1")
				li( data-target="#text_revs" data-slide-to="2")
				li( data-target="#text_revs" data-slide-to="3")
				li( data-target="#text_revs" data-slide-to="4")
